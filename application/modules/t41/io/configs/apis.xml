<?xml version="1.0" encoding="UTF-8"?>
<config>
	<apis>
		<api id="countries" type="restful">
			<enabled>true</enabled>
			<endpoint>v1</endpoint>
			<version>1.0.0</version>
			<label>Query countries information</label>
			<description>Get information about any country</description>
			<object>t41\IO\Country</object>
			<mode>crud</mode>
			<methods>
				<read>
					<acl>
						<all/>					
					</acl> 
					<auth>
						<parameter>token</parameter>
						<method></method>
					</auth>
					<apiparameters>
	 					<parameter id="code">
							<type>string</type>
							<description>ISO-3166 Country Code (see http://www.iso.org/iso/country_codes.htm)</description>
						</parameter>
	 					<parameter id="continent">
							<type>string</type>
						</parameter>
	 					<parameter id="currency">
							<type>string</type>
						</parameter>
						<parameter id="query">
							<type>string</type>
							<target>label</target>
							<searchmode>contains</searchmode>
						</parameter>
					</apiparameters>
					<properties>
						<label/>
						<capital/>
					</properties>
					<extproperties>
						<population/>
						<continent/>
						<currency/>
					</extproperties>
					<sortings>
						<label>ASC</label>
					</sortings>
					<datakey>code</datakey>
				</read>
			</methods>
		</api>
		<api id="cities" type="restful">
			<enabled>true</enabled>
			<endpoint>v1</endpoint>
			<version>1.0.0</version>
			<label>Query cities information of a given country</label>
			<description><![CDATA[Provide a country code and a query of two or more letters and get the list of the existing cities in the matching country.
Get your API token at http://t41.io/register.]]></description>
			<object>t41\IO\City</object>
			<mode>crud</mode>
			<methods>
				<read>
					<acl>
						<all/>
					</acl>
					<apiparameters>
 						<parameter id="country">
							<type>string</type>
							<target>country[code</target>
							<constraints>
								<mandatory/>
							</constraints>
						</parameter>	
						<parameter id="query">
							<type>string</type>
							<target>label</target>
							<searchmode>contains</searchmode>
						</parameter>
					</apiparameters>
					<properties>
						<label/>
						<postcode/>
						<county/>
						<source/>
					</properties>
					<extproperties>
						<fromdate/>
						<todate/>
					</extproperties>
					<sortings>
						<label>ASC</label>
					</sortings>
					<datakey>code</datakey>
				</read>
			</methods>
		</api>
		
		<api id="roads" type="restful">
			<enabled>true</enabled>
			<endpoint>v1</endpoint>
			<version>1.0.0</version>
			<label>Query streets of a given city</label>
			<description></description>
			<object>t41\IO\Road</object>
			<mode>crud</mode>
			<methods>
				<read>
					<acl>
						<all/>
					</acl>
					<apiparameters>
						<parameter id="country">
							<type>string</type>
							<target>country[code</target>
						</parameter>
						<parameter id="city">
							<type>string</type>
							<target>city[code</target>
							<constraints>
								<mandatory/>
							</constraints>
						</parameter>
						<parameter id="code">
							<type>string</type>
							<target>code</target>
						</parameter>
						<parameter id="query">
							<type>string</type>
							<target>label</target>
						</parameter>
					</apiparameters>
					<properties>
						<label/>
						<type/>
						<source/>
					</properties>
					<sortings>
						<label>ASC</label>
					</sortings>
					<datakey>code</datakey>
				</read>
			</methods>
		</api>
		
		<api id="plots" type="restful">
			<enabled>true</enabled>
			<endpoint>v1</endpoint>
			<version>1.0.0</version>
			<label>Query buildings of a given street</label>
			<description></description>
			<object>t41\IO\Plot</object>
			<mode>crud</mode>
			<methods>
				<read>
					<acl>
						<all/>
					</acl>
					<apiparameters>			
		 				<parameter id="country">
							<type>string</type>
							<target>country[code</target>
						</parameter>
						<parameter id="city">
							<type>string</type>
							<target>city[code</target>
						</parameter>
						<parameter id="road">
							<type>string</type>
							<target>road[code</target>
							<constraints>
								<mandatory/>
							</constraints>
						</parameter>
						<parameter id="position">
							<type>string</type>
							<target>location[coordinates</target>
							<searchmode>near</searchmode>
							<constraints>
								<mandatory/>
							</constraints>
						</parameter>
					</apiparameters>
					<properties>
						<number/>
						<location/>
						<source/>
					</properties>
					<extproperties>
						<label/>
						<city/>
					</extproperties>
 					<sortings>
						<numberNumPart>ASC</numberNumPart>
						<numberAlphaPart>ASC</numberAlphaPart>
					</sortings>
					<datakey>code</datakey>
				</read>
			</methods>
		</api>
	</apis>
</config>
